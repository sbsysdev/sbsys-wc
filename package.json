{
    "name": "@sbsys/sbsys-wc",
    "version": "0.2.1",
    "type": "module",
    "description": "SBSYS WEB Components & Utilities",
    "files": [
        "dist"
    ],
    "main": "./dist/sbsys-wc.umd.cjs",
    "module": "./dist/sbsys-wc.js",
    "exports": {
        ".": {
            "import": [
                "./dist/sbsys-wc.js",
                "./dist/index.d.ts"
            ],
            "require": "./dist/sbsys-wc.umd.cjs"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
        "lint": "eslint --fix \"**/*.{js,ts}\"",
        "fix": "npm run format && npm run lint",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sbsysdev/sbsys-wc.git"
    },
    "keywords": [
        "WEB",
        "Components",
        "TypeScript",
        "Lit",
        "HTML5",
        "CSS3",
        "JavaScript"
    ],
    "author": "Steven Bustillo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sbsysdev/sbsys-wc/issues"
    },
    "homepage": "https://github.com/sbsysdev/sbsys-wc#readme",
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "@vitest/ui": "^1.1.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-lit": "^1.11.0",
        "lit": "^3.1.0",
        "prettier": "^3.1.1",
        "sass": "^1.69.5",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vite-plugin-dts": "^3.7.0",
        "vitest": "^1.1.0"
    },
    "peerDependencies": {
        "lit": "^3.1.0"
    },
    "typings": "./dist/index.d.ts"
}
